<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin2"
    android:paddingRight="@dimen/activity_horizontal_margin2"
    android:paddingTop="@dimen/activity_vertical_margin2"
    android:paddingBottom="@dimen/activity_vertical_margin2"
    tools:context="br.edu.ifspsaocarlos.sdm.sdmmessenger.view.ChatActivity">

    <!--
    <TextView
        android:id="@+id/tvChat"
        android:text="Hello World!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    -->

    <ListView
        android:id="@+id/lvMensagens"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/etMensagem" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etMensagem"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:hint="@string/chat_etMensagem_hint"
        android:layout_toStartOf="@+id/btnEnviar"
        android:background="#ffffff"
        android:paddingLeft="@dimen/activity_horizontal_margin2"
        android:paddingRight="@dimen/activity_horizontal_margin2"
        android:paddingTop="@dimen/activity_vertical_margin2"
        android:paddingBottom="@dimen/activity_vertical_margin2"
        android:layout_alignTop="@+id/btnEnviar" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnEnviar"
        android:paddingLeft="@dimen/activity_horizontal_margin2"
        android:paddingRight="@dimen/activity_horizontal_margin2"
        android:paddingTop="@dimen/activity_vertical_margin2"
        android:paddingBottom="@dimen/activity_vertical_margin2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_send_black_24dp"
        android:background="#ffffff" />

</RelativeLayout>
